<Window x:Class="Week13Day3Demo.WindowBinding2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week13Day3Demo"
        mc:Ignorable="d"
        Title="WindowBinding2" Height="450" Width="800">
    <Canvas>
        <TextBox x:Name="TextBoxData" Canvas.Left="10" Canvas.Top="10" Width="300" />
        <Label Canvas.Left="10" Canvas.Top="33" Width="780" Background="Cyan" Height="43" Content="{Binding Path=Text, ElementName=TextBoxData}" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</Window>
